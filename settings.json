{
  // VSCODE-settings.json
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascriptreact"
  },

  /////////////////////////
  // Editor Settings
  /////////////////////////

  // Editor Minimap settings
  "editor.minimap.maxColumn": 0,
  "editor.minimap.side": "right",
  "editor.minimap.scale": 1,

  // Editor suggestions settings
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.showWords": false,
  "editor.suggest.preview": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.wordBasedSuggestionsMode": "allDocuments",
  "editor.suggestSelection": "first",
  "editor.quickSuggestionsDelay": 0,

  // Editor font settings
  "editor.fontLigatures": true,
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontWeight": "500",
  "editor.fontSize": 15,

  // Editor cursor settings
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",

  // Editor line settings
  "editor.bracketPairColorization.enabled": true,
  "editor.inlayHints.fontFamily": "Fira Code",
  "editor.inlayHints.enabled": true,
  "editor.renderWhitespace": "boundary",
  "editor.smoothScrolling": true,
  "editor.wrappingIndent": "deepIndent",
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.lineHeight": 25,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,

  // Editor miscellaneous
  "editor.codeLens": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  /////////////////////////
  // Workbench Settings
  /////////////////////////

  // Workbench file settings
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",

  // Workbench sidebar settings
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",

  // Workbench startup settings
  "workbench.startupEditor": "newUntitledFile",

  /////////////////////////
  // Intellisense Settings
  /////////////////////////
  "vsintellicode.typescript.completionsEnabled": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  /////////////////////////
  // JS & TS Settings
  /////////////////////////
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "javascript.format.semicolons": "insert",
  "javascript.preferences.quoteStyle": "double",

  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.fontFamily": "Fira Code",
  "git.confirmSync": false,
  "git.autofetch": true,

  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.wrappingStrategy": "simple",

  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.emmetCompletions": true,
  "zenMode.hideTabs": false,

  "explorer.confirmDelete": false,
  "diffEditor.wordWrap": "on",
  "prettier.jsxBracketSameLine": true,
  "prettier.quoteProps": "consistent",
  "search.maintainFileSearchCache": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  "terminal.integrated.tabs.enabled": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.completeFunctionCalls": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "terminal.integrated.fontSize": 12,
  "debug.console.fontSize": 12,
  "explorer.openEditors.sortOrder": "alphabetical",
  "references.preferredLocation": "view",
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "emmet.showAbbreviationSuggestions": false,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "cSpell.userWords": ["prefetch", "semibold"],
  "terminal.integrated.profiles.linux": {
    "C:Users\\rglasgow\\AppData\\Local\\Programs\\Git\\bin\\bash.exe": {
      "path": "C:Users\\rglasgow\\AppDataLocal\\Programs\\Git\\bin\\bash.exe",
      "args": ["-l"]
    }
  },
  "terminal.explorerKind": "external",
  "files.exclude": {
    "node_modules": true
  },
  "tabnine.experimentalAutoImports": true,
  "workbench.colorTheme": "Horizon Dark",
  "material-icon-theme.folders.color": "#26a69a",
  "material-icon-theme.activeIconPack": "react"
}
